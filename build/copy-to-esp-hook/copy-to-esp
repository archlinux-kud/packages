#!/usr/bin/env bash
# Copyright (C) 2023 Albert I (krasCGQ)
#
# SPDX-License-Identifier: Unlicense

action=${1}

copy-to-esp_install() {
    local efi_file=${1}
    install -D "/boot/${efi_file}" "${esp_dir}/${efi_file}"
}

copy-to-esp_uninstall() {
    local efi_file=${1}
    rm "${esp_dir}/${efi_file}"
    rmdir --ignore-fail-on-non-empty "$(dirname "${esp_dir}/${efi_file}")"
}

if mountpoint -q /boot && [[ -d /boot/EFI ]]; then
    echo "==> ESP mount point is at /boot or doesn't exist. Exiting."
    exit 0
elif mountpoint -q /efi && [[ -d /efi/EFI ]]; then
    esp_dir=/efi
elif mountpoint -q /boot/efi && [[ -d /boot/efi/EFI ]]; then
    esp_dir=/boot/efi
fi

while read -r line; do
    efi_file=${line#boot/}
    pacman -Qo "/boot/${efi_file}" >/dev/null 2>&1 || continue
    eval "copy-to-esp_${action} ${efi_file}"
done
